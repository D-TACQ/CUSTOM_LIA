#!/bin/sh
# assumes length=1024

bank=${1:-0}
freq=$2


if [ "x$freq" = "x" ]; then
	echo "USAGE: load.lia.intref BANK FILE FREQ"
	exit 1
fi
let nsam="$(ls -l $file | awk '{ print $5/4 }')"
let POW217=131072
let ICLK=100000000
let refstep="$freq*$POW217*$nsam/$ICLK"

echo $bank >/dev/dsp1/REF_ID
echo $refstep > /dev/dsp1/REF_STEP

